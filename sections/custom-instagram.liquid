{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
   #shopify-section-{{ section.id }} .custom-instagram {
          background-image: url({{ section.settings.bg-image | img_url:'master' }});
                background-position: top;
    background-size: cover;
    }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="custom-instagram section-{{ section.id }}-padding">
  <div class="section-stack">
  <div class="section section-full">
    {%- if section.settings.title != blank -%}
      <div class="instagram-header prose text-center">
       {%- if section.settings.subheading != blank -%}
          <p class="subheading section-subheading">{{- section.settings.subheading -}}</p>
        {%- endif -%}
         {%- if section.settings.title != blank -%}
       <h2 class="h2 section-header_title {{ section.settings.heading_tag }}" reveal-on-scroll="true" style="opacity: 1;">{{ section.settings.title }}</h2>
      {%- endif -%}
      </div>
    {%- endif -%}
  </div>

<div class="custom-instagram-wrapper">  
    <div class="custom-instagram-items ci-items_top-row">
      <div class="custom-instagram-item insta-top-slider">
        {% for block in section.blocks %}
          {%- case block.type -%}
            {%- when 'top-row' -%}
              <div class="ci-feat-item">
                <div class="ci-image-item rounded" style="background-color: {{ block.settings.background }}; text_color:{{ block.settings.text_color }} ">
                  {%- if block.settings.link != blank -%}
                    <a href="{{ block.settings.link }}" target="_blank">
                  {%- endif -%}
                  <div class="image-wrap rounded">
                    <img src="{{ block.settings.image | img_url:'master' }}">
                    <div class="insta-overlay"><i class="fa fa-instagram"></i></div>
                  </div>
                  {%- if block.settings.link != blank -%}</a>{%- endif -%}
                </div>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>

      <div class="custom-instagram-items ci-items_bottom-row">
      <div class="custom-instagram-item insta-bottom-slider" dir="rtl">
        {% for block in section.blocks %}
          {%- case block.type -%}
            {%- when 'bottom-row' -%}
             <div class="ci-feat-item">
                <div class="ci-image-item rounded" style="background-color: {{ block.settings.background }}; text_color:{{ block.settings.text_color }} ">
                  {%- if block.settings.link != blank -%}
                    <a href="{{ block.settings.link }}" target="_blank">
                  {%- endif -%}
                  <div class="image-wrap rounded">
                    <img src="{{ block.settings.image | img_url:'master' }}">
                    <div class="insta-overlay"><i class="fa fa-instagram"></i></div>
                  </div>
                  {%- if block.settings.link != blank -%}</a>{%- endif -%}
                </div>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
  </div>
</div>
</div>
</div>

